	.whoami {
		@include container('md');

		.whoami-card {
			display: flex;
			align-items: center;
			justify-content: center;
			gap: 1rem;
			margin-bottom: 3rem;
			.whoami-avatar {
				display: flex;
				align-items: center;
				justify-content: center;
				border-radius: 50%;
				padding: 6px;
				outline: 3px solid var(--oc-gray-3);
				outline-offset: -3px;
