<style lang="scss">
  @use '../styles/breakpoints' as *;

	header {
		top: 0;
		left: 0;
		right: 0;
		position: fixed;
		z-index: 999;
		padding: 12px;
		background-color: color-mix(in srgb, var(--oc-indigo-3) 20%, transparent);
		backdrop-filter: blur(8px);

		animation: colorChange linear both;
		animation-timeline: scroll();
		animation-range: 90vh 100vh;
		@keyframes colorChange {
			from {
				background-color: color-mix(in srgb, var(--oc-indigo-3) 10%, transparent);
				border-bottom: 1px solid transparent;
				color: var(--oc-white);
			}
			to {
				background-color: color-mix(in srgb, var(--oc-indigo-1) 10%, transparent);
				border-bottom: 1px solid var(--oc-gray-3);
				color: var(--oc-black);
			}
		}

		@keyframes textColorChange {
			from {
				color: var(--oc-white);
			}
			to {
				color: var(--oc-black);
			}
		}

		.header-content {
			@include container('md');

			padding: 4px 0;
			a {
				text-decoration: none;
				animation: textColorChange linear both;
				animation-timeline: scroll();
				animation-range: 90vh 100vh;
			}
		}
	}

	.hero {
		height: 100vh;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		background: linear-gradient(222deg, rgba(111, 121, 213, 0.5), rgba(198, 246, 254, 0.1));
		color: var(--oc-white);
		padding: 0 1rem;
		position: relative;

		.background-image {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			z-index: -1;
			img {
				width: 100%;
				height: 100%;
				object-fit: cover;
			}
			.background-image-placeholder {
				position: absolute;
				top: 0;
				right: 0;
				bottom: 0;
				left: 0;
				z-index: -1;

				width: 100%;
				height: 100%;
				object-fit: cover;
			}
		}
		.hero-content {
			margin: 0 auto;
			white-space: nowrap;
			word-break: auto-phrase;

			h1 {
				font-size: 3.6rem;
				font-weight: 700;
				margin: 0;
				letter-spacing: -0.02em;
				line-height: 1;
				
				@include breakpoint('sm') {
					font-size: 5.5rem;
					line-height: 0.9;
				}
				
				@include breakpoint('md') {
					font-size: 7rem;
				}
			}
			p {
				margin: 0;
				font-size: 1.3rem;
				line-height: 1;
				
				@include breakpoint('sm') {
					font-size: 1.8rem;
					line-height: 0.9;
					margin-top: 0.5rem;
				}
				
				@include breakpoint('md') {
					font-size: 2.3rem;
				}
			}
		}
		.word-rotator {
			text-align: center;
			margin-top: 1.5rem;
			font-size: 1rem;
			
			@include breakpoint('sm') {
				margin-top: 2rem;
				font-size: 1.2rem;
			}
			
			@include breakpoint('md') {
				font-size: 1.3rem;
			}
		}
	}

	section {
		padding: 4rem 0;
		h2 {
			font-size: 2rem;
			font-weight: normal;
			margin: 0;
			letter-spacing: -0.02em;
			line-height: 0.9;
			margin-bottom: 2rem;
		}
